Curl : sudo apt install curl

git: sudo apt install git

build-essential: sudo apt-get install build-essential

ripgrep : 
  curl -LO https://github.com/BurntSushi/ripgrep/releases/download/14.1.0/ripgrep_14.1.0-1_amd64.deb
  sudo dpkg -i ripgrep_14.1.0-1_amd64.deb

lua : 
sudo apt install lua5.4
sudo apt install liblua5.4-dev

lua-rocks:
wget https://luarocks.org/releases/luarocks-3.11.1.tar.gz
tar zxpf luarocks-3.11.1.tar.gz
cd luarocks-3.11.1
./configure && make && sudo make install
sudo luarocks install luasocket

Neovim : 
  curl -LO https://github.com/neovim/neovim/releases/latest/download/nvim-linux64.tar.gz
  sudo rm -rf /opt/nvim
  sudo tar -C /opt -xzf nvim-linux64.tar.gz
  rm nvim-linux64.tar.gz

adicionar ao bashrc : export PATH="$PATH:/opt/nvim-linux64/bin"

npm : 
curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.7/install.sh | bash
source ~/.bashrc
nvm install 20

gcc : sudo apt install gcc

nerdfont: 
wget https://github.com/ryanoasis/nerd-fonts/releases/download/v3.2.1/0xProto.zip

unzip 0xProto.zip -d ~/.fonts

fc-cache -fv

rm 0xProto.zip

catppuccin: curl -L https://raw.githubusercontent.com/catppuccin/gnome-terminal/v0.3.0/install.py | python3 -

fd: sudo apt install fd-find

lazygit: 
LAZYGIT_VERSION=$(curl -s "https://api.github.com/repos/jesseduffield/lazygit/releases/latest" | grep -Po '"tag_name": "v\K[^"]*')
curl -Lo lazygit.tar.gz "https://github.com/jesseduffield/lazygit/releases/latest/download/lazygit_${LAZYGIT_VERSION}_Linux_x86_64.tar.gz"
tar xf lazygit.tar.gz lazygit
sudo install lazygit /usr/local/bin
rm lazygit lazygit.tar.gz

adicionar ao bashrc: [ -z "$TMUX"  ] && { tmux attach || exec tmux new-session && exit;}

tmuxinator: sudo apt install tmuxinator

